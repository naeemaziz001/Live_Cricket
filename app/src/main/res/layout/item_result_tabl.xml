<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_margin="7dp"
    android:background="@drawable/shape_obj"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
        android:text="Pakistan Won By Four Wickets"
        android:layout_width="wrap_content"
            android:background="@drawable/shape_res"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/textView1"
        android:textColor="#FCFF00"
        />


    <TableRow
        android:id="@+id/winrow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="5dip">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/win"
            android:id="@+id/win1"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="invisible" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/win"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:id="@+id/winmid"
            android:layout_weight="1"
            android:visibility="invisible" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/win"
            android:layout_gravity="center"
            android:id="@+id/win2"
            android:layout_weight="1"
            android:visibility="invisible" />


    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dip"
        >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/aus"
                android:id="@+id/imageView1"
                android:layout_gravity="center"
                android:layout_weight="1" />


        <ImageView
            android:id="@+id/immmid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/vs" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pak"
            android:layout_gravity="center"
            android:id="@+id/imageView3"
            android:layout_weight="1" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:padding="5dip"
        android:foregroundTint="@android:color/holo_blue_bright">

        <TextView
            android:text="AUS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="2"

            android:lines="1"
             />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/vb"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_weight="1"

            />
        <TextView
            android:text="PAK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_weight="2"

            />
    </TableRow>
    <!--android:background="#005a27"-->


</TableLayout >